<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well">
                <h2 class="text-center">Setup game: <%= @game.name %></h2>
                <h5>Game goes to: <%= @game.starting_score %></h5>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <h3 class="text-center">Team 1:</h3>
                    <% if @team1.name? %>
                        <%= @team1.name %>
                    <% end %>
                    <%= form_for @team1, url: game_teams_path(game_id: @game.id) do |f| %>
                        <div class="field form-group">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "form-control" %>
                        </div>
                        <div class="action form-group">
                            <%= f.submit :Submit, class: "btn btn-primary" %>
                        </div>
                    <% end %>
                    <% if @game.team1_id != nil && @team1.player1_id == nil %>
                        <h4>Player 1:</h4>
                        <%= form_for @t1p1, url: game_team_players_path(game_id: @game.id, team_id: @game.team1_id) do |f| %>
                            <div class="field form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name %>
                            </div>
                            <div class="action form-group">
                                <%= f.submit :Submit, class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    <% end %>
                    <% if @game.team1_id != nil && @team1.player2_id == nil %>
                        <h4>Player 2:</h4>
                        <%= form_for @t1p2, url: game_team_players_path(game_id: @game.id, team_id: @game.team1_id) do |f| %>
                            <div class="field form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name %>
                            </div>
                            <div class="action form-group">
                                <%= f.submit :Submit, class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    <% end %>
                    <% if @game.team1_id != nil && @team1.player3_id == nil %>
                        <h4>Player 3:</h4>
                        <%= form_for @t1p3, url: game_team_players_path(game_id: @game.id, team_id: @game.team1_id) do |f| %>
                            <div class="field form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name %>
                            </div>
                            <div class="action form-group">
                                <%= f.submit :Submit, class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    <% end %>
                    <% if @game.team1_id != nil && @team1.player4_id == nil %>
                        <h4>Player 4:</h4>
                        <%= form_for @t1p4, url: game_team_players_path(game_id: @game.id, team_id: @game.team1_id) do |f| %>
                            <div class="field form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name %>
                            </div>
                            <div class="action form-group">
                                <%= f.submit :Submit, class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    <% end %>
                    <% if @game.team1_id != nil && @team1.player5_id == nil %>
                        <h4>Player 5:</h4>
                        <%= form_for @t1p5, url: game_team_players_path(game_id: @game.id, team_id: @game.team1_id) do |f| %>
                            <div class="field form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name %>
                            </div>
                            <div class="action form-group">
                                <%= f.submit :Submit, class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    <% end %>
                </div>
                <div class="col-sm-6">
                    <h3 class="text-center">Team 2:</h3>
                    <%= form_for @team2, url: game_teams_path(game_id: @game.id) do |f| %>
                        <div class="field form-group">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "form-control" %>
                        </div>
                        <div class="action form-group">
                            <%= f.submit :Submit, class: "btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>