<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well">
          <h2 class="text-center">Setup game: <%= @game.name %></h2>
          <h5>Game goes to: <%= @game.starting_score %></h5>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <h3 class="text-center">Team 1: <%= @team1.name %></h3>
          <%= form_for @team1, url: game_teams_path(game_id: @game.id) do |f| %>
            <div class="field form-group">
              <%= f.label :name %>
              <%= f.text_field :name %>
              <%= f.submit :Submit, class: "btn btn-primary" %>
            </div>
          <% end %>
          <% if @game.team1_id != nil %>
              <% @team1players.each_with_index do |player, index| %>
                <h4>Player <%= (index + 1).to_s %>: <%= player.name %></h4>
                <%= link_to "Edit Player", edit_game_team_player_path(game_id: @game.id, team_id: @game.team1_id, id: player.id), class: "btn btn-primary" %>
                  
              <% end %>
              <% if @team1players.length < 5 %>
                <br/>
                <%= link_to "Add Player", new_game_team_player_path(game_id: @game.id, team_id: @game.team1_id), class: "btn btn-primary" %>
              <% end %>
          <% end %>
      </div>
      <div class="col-sm-6">
          <h3 class="text-center">Team 2:</h3>
          <%= form_for @team2, url: game_teams_path(game_id: @game.id) do |f| %>
              <div class="field form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name %>
                  <%= f.submit :Submit, class: "btn btn-primary" %>
              </div>
          <% end %>
          <% if @game.team2_id != nil %>
              <% @team2players.each_with_index do |player, index| %>
                <h4>Player <%= (index + 1).to_s %>: <%= player.name %></h4>
                <%= link_to "Edit Player", edit_game_team_player_path(game_id: @game.id, team_id: @game.team2_id, id: player.id), class: "btn btn-primary" %>
                  
              <% end %>
              <% if @team2players.length < 5 %>
                <br/>
                <%= link_to "Add Player", new_game_team_player_path(game_id: @game.id, team_id: @game.team2_id), class: "btn btn-primary" %>
              <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <div class="well">
          <%= link_to "Start Game", game_path(id: @game.id), class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>