<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <h2 class="text-center">Game of <%= @game.starting_score %></h2>
                <br/>
                <%= link_to "Edit Players", game_editplayers_path(game_id: @game.id), class: "btn btn-primary" %>
                <h4>Players:</h4>
                <div class="row">
                    <div class="col-sm-6">
                        <h5>Team 1:</h5>
                        <% @team1.each do |player| %>
                            <div class="well">
                                <h6><%= player.name %></h6>
                            </div>
                        <% end %>
                    </div>
                    <div class="col-sm-6">
                        <h5>Team 2:</h5>
                        <% @team2.each do |player| %>
                            <div class="well">
                                <h6><%= player.name %></h6>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>