<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <h2 class="text-center">Game of <%= @game.starting_score %></h2>
                <br/>
                <h4>Players:</h4>
                <div class="row">
                    <div class="col-sm-6">
                        <h5>Team 1:</h5>
                        <% @players.each do |player| %>
                            <% if player.on_team1 %>
                                <div class="well">
                                    <h6><%= player.name %></h6>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="col-sm-6">
                        <h5>Team 2:</h5>
                        <% @players.each do |player| %>
                            <% if !player.on_team1 %>
                                <div class="well">
                                    <h6><%= player.name %></h6>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>