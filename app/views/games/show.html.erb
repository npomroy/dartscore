<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <h2 class="text-center">Game of <%= @game.starting_score %></h2>
                <br/>
                <%= link_to "Edit Players", game_editplayers_path(game_id: @game.id), class: "btn btn-primary" %>
                <h4>Players:</h4>
                <div class="row">
                    <div class="col-sm-6">
                        
                        <h5>Team 1:</h5>
                        <% @team1.each do |player| %>
                            <div class="well">
                                <h6><%= player.name %></h6>
                            </div>
                        <% end %>
                    </div>
                    <div class="col-sm-6">
                        <% if !@game.team1_up %>
                            <h4>Now shooting:</h4>
                        <% end %>
                        <h5>Team 2:</h5>
                        <% @team2.each do |player| %>
                            <div class="well">
                                <h6><%= player.name %></h6>
                            </div>
                        <% end %>
                    </div>
                </div>
                <% if !@game.playing %>
                    <%= form_for @game do |f| %>
                        <%= f.hidden_field :playing, :value => true %>
                        <%= f.label "Team 1 goes first?" %>
                        <%= f.check_box :team1_up %>
                        <%= f.submit :StartGame %>
                    <% end %>
                <% else %>
                    <% if @game.team1_up %>
                        <h4>Now shooting: Team 1</h4>
                    <% else %>
                        <h4>Now shooting: Team 2</h4>
                    <% end %>    
                <% end %>
            </div>
        </div>
    </div>
</div>